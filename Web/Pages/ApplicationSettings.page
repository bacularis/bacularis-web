				<tbody id="application_settings_audit_log_list_body"></tbody>
				<tfoot>
					<tr>
						<th></th>
						<th><%[ IP address ]%></th>
						<th><%[ Username ]%></th>
						<th><%[ Date ]%></th>
						<th><%[ Type ]%></th>
